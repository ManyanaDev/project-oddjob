{
  "extends": "@oddjob/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "oddjob-ui/*": [
        "../../packages/ui/src/*"
      ],
      "oddjob-types/*": [
        "../../packages/types/src/*"
      ],
      "oddjob-eslint-config/*": [
        "../../packages/eslint-config/src/*"
      ],
      "oddjob-typescript-config/*": [
        "../../packages/typescript-config/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}